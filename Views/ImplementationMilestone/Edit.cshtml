@model CyberRiskApp.Models.ImplementationMilestone
@{
    ViewData["Title"] = "Edit Implementation Milestone";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-edit text-primary me-2"></i>
                    Edit Implementation Milestone
                </h2>
                <a asp-controller="Strategy" asp-action="Details" asp-route-id="@Model.StrategyPlanId" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Plan
                </a>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="StrategyPlanId" />
                <input type="hidden" asp-for="CreatedAt" />
                
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        <h6>Please correct the following errors:</h6>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <div class="card">
                    <div class="card-header bg-primary bg-opacity-10">
                        <h5 class="mb-0">
                            <i class="fas fa-tasks me-2"></i>Milestone Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MilestoneName" class="form-label fw-bold">Milestone Name <span class="text-danger">*</span></label>
                                    <input asp-for="MilestoneName" class="form-control" />
                                    <span asp-validation-for="MilestoneName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label fw-bold">Status</label>
                                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<CyberRiskApp.Models.MilestoneStatus>()">
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TargetDate" class="form-label fw-bold">Target Date <span class="text-danger">*</span></label>
                                    <input asp-for="TargetDate" type="date" class="form-control" />
                                    <span asp-validation-for="TargetDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @if (Model.Status == CyberRiskApp.Models.MilestoneStatus.Completed && !Model.CompletionDate.HasValue)
                                {
                                    <div class="mb-3">
                                        <label asp-for="CompletionDate" class="form-label fw-bold">Completion Date</label>
                                        <input asp-for="CompletionDate" type="date" class="form-control" />
                                        <span asp-validation-for="CompletionDate" class="text-danger"></span>
                                    </div>
                                }
                                else if (Model.CompletionDate.HasValue)
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Completed On</label>
                                        <div class="form-control-plaintext fw-bold text-success">
                                            @Model.CompletionDate.Value.ToString("MMMM dd, yyyy")
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3">
                                        <label asp-for="SortOrder" class="form-label fw-bold">Sort Order</label>
                                        <input asp-for="SortOrder" type="number" class="form-control" min="1" />
                                        <span asp-validation-for="SortOrder" class="text-danger"></span>
                                        <small class="form-text text-muted">Order in which this milestone should appear</small>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SuccessCriteria" class="form-label fw-bold">Success Criteria</label>
                            <textarea asp-for="SuccessCriteria" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="SuccessCriteria" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RelatedCapabilityIds" class="form-label fw-bold">Related Capabilities</label>
                            <input asp-for="RelatedCapabilityIds" class="form-control" placeholder="Comma-separated capability IDs (optional)" />
                            <span asp-validation-for="RelatedCapabilityIds" class="text-danger"></span>
                            <small class="form-text text-muted">Enter capability IDs separated by commas (e.g., 1,3,5)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Milestone Timeline -->
                @if (Model.CreatedAt != default(DateTime))
                {
                    <div class="card mt-4">
                        <div class="card-header bg-info bg-opacity-10">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2"></i>Timeline
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <i class="fas fa-plus-circle me-1"></i>
                                        Created: @Model.CreatedAt.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <i class="fas fa-target me-1"></i>
                                        Target: @Model.TargetDate.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    @if (Model.CompletionDate.HasValue)
                                    {
                                        <small class="text-success">
                                            <i class="fas fa-check-circle me-1"></i>
                                            Completed: @Model.CompletionDate.Value.ToString("MMM dd, yyyy")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">
                                            <i class="fas fa-hourglass me-1"></i>
                                            Days remaining: @Model.DaysUntilTarget
                                        </small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="card mt-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                                <a asp-controller="Strategy" asp-action="Details" asp-route-id="@Model.StrategyPlanId" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <div>
                                    <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="fas fa-trash me-2"></i>Delete Milestone
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this implementation milestone?</p>
                    <p class="mb-0"><strong>This action cannot be undone.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete Milestone
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-set completion date when status changes to Completed
            const statusSelect = document.querySelector('select[name="Status"]');
            const completionDateInput = document.querySelector('input[name="CompletionDate"]');
            
            if (statusSelect && completionDateInput) {
                statusSelect.addEventListener('change', function() {
                    if (this.value === '@((int)CyberRiskApp.Models.MilestoneStatus.Completed)') {
                        if (!completionDateInput.value) {
                            completionDateInput.value = new Date().toISOString().split('T')[0];
                        }
                    }
                });
            }
        });
    </script>
}