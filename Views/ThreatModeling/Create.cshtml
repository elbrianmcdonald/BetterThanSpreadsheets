@model CyberRiskApp.Models.ThreatModel

@{
    ViewData["Title"] = "Create Threat Model";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index">Threat Modeling</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create</li>
                        </ol>
                    </nav>
                    <h2 class="text-primary mb-0">
                        <i class="fas fa-plus me-2"></i>Create Threat Model
                    </h2>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Threat Model Information</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="Create" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Name" class="form-label"></label>
                                        <input asp-for="Name" class="form-control" placeholder="Enter threat model name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Framework" class="form-label"></label>
                                        <select asp-for="Framework" class="form-select" asp-items="ViewBag.Frameworks">
                                            <option value="">Select framework...</option>
                                        </select>
                                        <span asp-validation-for="Framework" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="mb-3">
                                    <label asp-for="Scope" class="form-label"></label>
                                    <textarea asp-for="Scope" class="form-control" rows="3" placeholder="Define the boundaries and scope of the threat model..."></textarea>
                                    <span asp-validation-for="Scope" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the threat model objectives, key assumptions, and methodology..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label"></label>
                                    <select asp-for="Status" class="form-select" asp-items="ViewBag.ThreatModelStatuses">
                                        <option value="">Select status...</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>


                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-save me-2"></i>Create Threat Model
                                        </button>
                                        <a asp-action="Index" class="btn btn-secondary ms-2">
                                            <i class="fas fa-times me-2"></i>Cancel
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Help Panel -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Threat Modeling Guide</h5>
                        </div>
                        <div class="card-body">
                            <h6><i class="fas fa-shield-alt me-2"></i>Framework Options</h6>
                            <p class="small">Choose your threat modeling framework:</p>
                            
                            <div class="mb-3">
                                <strong><i class="fas fa-chess me-1"></i> MITRE ATT&CK</strong>
                                <p class="small text-muted">Comprehensive framework of adversary tactics and techniques based on real-world observations. Includes 14 tactics and hundreds of techniques.</p>
                            </div>
                            
                            <div class="mb-3">
                                <strong><i class="fas fa-crosshairs me-1"></i> Lockheed Kill Chain</strong>
                                <p class="small text-muted">Seven-phase model focusing on the attack lifecycle from initial reconnaissance to actions on objectives.</p>
                            </div>
                            
                            <div class="mb-3">
                                <strong><i class="fas fa-sync-alt me-1"></i> Both Frameworks</strong>
                                <p class="small text-muted">Combine both frameworks for comprehensive coverage - map Kill Chain phases to MITRE techniques.</p>
                            </div>

                            <hr>

                            <h6><i class="fas fa-building me-2"></i>Environment Types</h6>
                            <p class="small">The following environments will be created:</p>
                            <ul class="small">
                                <li><strong>Crown Jewels</strong> - Critical assets</li>
                                <li><strong>Azure Cloud</strong> - Cloud infrastructure</li>
                                <li><strong>Corporate Network</strong> - Internal systems</li>
                                <li><strong>Remote Access</strong> - VPN/remote work</li>
                                <li><strong>Plant Network</strong> - Industrial systems</li>
                                <li><strong>OT/ICS</strong> - Operational technology</li>
                            </ul>

                            <hr>
                            
                            <h6><i class="fas fa-lightbulb me-2"></i>Best Practices</h6>
                            <ul class="small">
                                <li>Define clear scope and boundaries</li>
                                <li>Consider industry-specific threats</li>
                                <li>Map techniques to your environments</li>
                                <li>Build realistic attack scenarios</li>
                                <li>Generate actionable recommendations</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}