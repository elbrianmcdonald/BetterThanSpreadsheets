@model CyberRiskApp.Models.ThreatModel

@{
    ViewData["Title"] = "Edit Threat Model";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index">Threat Modeling</a></li>
                            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit</li>
                        </ol>
                    </nav>
                    <h2 class="text-primary mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Threat Model
                    </h2>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Details
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Threat Model Information</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="Edit" method="post">
                                @Html.AntiForgeryToken()
                                <input asp-for="Id" type="hidden" />
                                <input asp-for="CreatedBy" type="hidden" />
                                <input asp-for="CreatedAt" type="hidden" />
                                <input asp-for="ApprovedBy" type="hidden" />
                                <input asp-for="ApprovedAt" type="hidden" />
                                
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Name" class="form-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>


                                        <div class="mb-3">
                                            <label asp-for="AssetOwner" class="form-label"></label>
                                            <input asp-for="AssetOwner" class="form-control" />
                                            <span asp-validation-for="AssetOwner" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="AssetValue" class="form-label"></label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input asp-for="AssetValue" class="form-control" />
                                            </div>
                                            <span asp-validation-for="AssetValue" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="Status" class="form-label"></label>
                                            <select asp-for="Status" class="form-select" asp-items="ViewBag.ThreatModelStatuses">
                                            </select>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="RiskAssessmentId" class="form-label">Link to Risk Assessment (Optional)</label>
                                            <select asp-for="RiskAssessmentId" class="form-select" asp-items="ViewBag.RiskAssessments">
                                                <option value="">Select risk assessment...</option>
                                            </select>
                                            <span asp-validation-for="RiskAssessmentId" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="NextReviewDate" class="form-label"></label>
                                            <input asp-for="NextReviewDate" class="form-control" type="date" />
                                            <span asp-validation-for="NextReviewDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ReviewNotes" class="form-label"></label>
                                    <textarea asp-for="ReviewNotes" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="ReviewNotes" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-2"></i>Update Threat Model
                                        </button>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ms-2">
                                            <i class="fas fa-times me-2"></i>Cancel
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Status Update Panel -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Quick Status Update</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="UpdateStatus" method="post" id="statusForm">
                                <input name="id" value="@Model.Id" type="hidden" />
                                
                                <div class="mb-3">
                                    <label for="status" class="form-label">Change Status:</label>
                                    <select name="status" class="form-select">
                                        @if (Model.Status == CyberRiskApp.Models.ThreatModelStatus.Draft)
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Draft)" selected>Draft</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Draft)">Draft</option>
                                        }
                                        
                                        @if (Model.Status == CyberRiskApp.Models.ThreatModelStatus.InReview)
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.InReview)" selected>In Review</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.InReview)">In Review</option>
                                        }
                                        
                                        @if (Model.Status == CyberRiskApp.Models.ThreatModelStatus.Approved)
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Approved)" selected>Approved</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Approved)">Approved</option>
                                        }
                                        
                                        @if (Model.Status == CyberRiskApp.Models.ThreatModelStatus.Active)
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Active)" selected>Active</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Active)">Active</option>
                                        }
                                        
                                        @if (Model.Status == CyberRiskApp.Models.ThreatModelStatus.Archived)
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Archived)" selected>Archived</option>
                                        }
                                        else
                                        {
                                            <option value="@((int)CyberRiskApp.Models.ThreatModelStatus.Archived)">Archived</option>
                                        }
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="notes" class="form-label">Status Notes:</label>
                                    <textarea name="notes" class="form-control" rows="3" placeholder="Add notes about this status change..."></textarea>
                                </div>
                                
                                <button type="submit" class="btn btn-info btn-sm">
                                    <i class="fas fa-check me-1"></i>Update Status
                                </button>
                            </form>
                            
                            <hr class="my-3">
                            
                            <h6><i class="fas fa-info-circle me-2"></i>Current Details</h6>
                            <dl class="row">
                                <dt class="col-sm-6">Current Status:</dt>
                                <dd class="col-sm-6">
                                    @{
                                        var statusBadge = Model.Status switch
                                        {
                                            CyberRiskApp.Models.ThreatModelStatus.Draft => "bg-warning text-dark",
                                            CyberRiskApp.Models.ThreatModelStatus.InReview => "bg-info",
                                            CyberRiskApp.Models.ThreatModelStatus.Approved => "bg-primary",
                                            CyberRiskApp.Models.ThreatModelStatus.Active => "bg-success",
                                            CyberRiskApp.Models.ThreatModelStatus.Archived => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusBadge">@Model.Status</span>
                                </dd>
                                
                                <dt class="col-sm-6">Created:</dt>
                                <dd class="col-sm-6">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
                                
                                <dt class="col-sm-6">Created By:</dt>
                                <dd class="col-sm-6">@Model.CreatedBy</dd>
                                
                                @if (Model.ApprovedBy != null)
                                {
                                    <dt class="col-sm-6">Approved By:</dt>
                                    <dd class="col-sm-6">@Model.ApprovedBy</dd>
                                }
                                
                                <dt class="col-sm-6">Attack Count:</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-danger">@Model.Attacks.Count</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}