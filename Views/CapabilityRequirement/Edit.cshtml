@model CyberRiskApp.Models.CapabilityRequirement
@{
    ViewData["Title"] = "Edit Capability Requirement";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-edit text-primary me-2"></i>
                    Edit Capability Requirement
                </h2>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Cancel
                </a>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="StrategyGoalId" />
                <input type="hidden" asp-for="CreatedAt" />
                
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        <h6>Please correct the following errors:</h6>
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <div class="card">
                    <div class="card-header bg-primary bg-opacity-10">
                        <h5 class="mb-0">
                            <i class="fas fa-cogs me-2"></i>Capability Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CapabilityName" class="form-label fw-bold">Capability Name <span class="text-danger">*</span></label>
                                    <input asp-for="CapabilityName" class="form-control" />
                                    <span asp-validation-for="CapabilityName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CapabilityType" class="form-label fw-bold">Type <span class="text-danger">*</span></label>
                                    <select asp-for="CapabilityType" class="form-control" asp-items="Html.GetEnumSelectList<CyberRiskApp.Models.CapabilityType>()">
                                    </select>
                                    <span asp-validation-for="CapabilityType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Priority" class="form-label fw-bold">Priority</label>
                                    <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<CyberRiskApp.Models.CapabilityPriority>()">
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label fw-bold">Status</label>
                                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<CyberRiskApp.Models.CapabilityStatus>()">
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TargetDate" class="form-label fw-bold">Target Date</label>
                                    <input asp-for="TargetDate" type="date" class="form-control" />
                                    <span asp-validation-for="TargetDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @if (Model.Status == CyberRiskApp.Models.CapabilityStatus.Completed && !Model.CompletionDate.HasValue)
                                {
                                    <div class="mb-3">
                                        <label asp-for="CompletionDate" class="form-label fw-bold">Completion Date</label>
                                        <input asp-for="CompletionDate" type="date" class="form-control" />
                                        <span asp-validation-for="CompletionDate" class="text-danger"></span>
                                    </div>
                                }
                                else if (Model.CompletionDate.HasValue)
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Completed On</label>
                                        <div class="form-control-plaintext fw-bold text-success">
                                            @Model.CompletionDate.Value.ToString("MMMM dd, yyyy")
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3">
                                        <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                                        <input asp-for="StartDate" type="date" class="form-control" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EstimatedEffortMonths" class="form-label fw-bold">Estimated Effort (Months)</label>
                                    <input asp-for="EstimatedEffortMonths" type="number" class="form-control" step="0.25" min="0" />
                                    <span asp-validation-for="EstimatedEffortMonths" class="text-danger"></span>
                                    <small class="form-text text-muted">Estimated person-months (0.25 = 1 week, 1 = 1 month, etc.)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ProgressPercentage" class="form-label fw-bold">Progress Percentage</label>
                                    <div class="input-group">
                                        <input asp-for="ProgressPercentage" type="number" class="form-control" min="0" max="100" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="ProgressPercentage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EstimatedCost" class="form-label fw-bold">Estimated Cost</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="EstimatedCost" type="number" class="form-control" placeholder="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="EstimatedCost" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ActualCost" class="form-label fw-bold">Actual Cost</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="ActualCost" type="number" class="form-control" placeholder="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="ActualCost" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AssignedTo" class="form-label fw-bold">Assigned To</label>
                                    <input asp-for="AssignedTo" class="form-control" placeholder="Enter person or team responsible" />
                                    <span asp-validation-for="AssignedTo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dependencies" class="form-label fw-bold">Dependencies</label>
                            <textarea asp-for="Dependencies" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Dependencies" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Progress Summary -->
                <div class="card mt-4">
                    <div class="card-header bg-info bg-opacity-10">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-bar me-2"></i>Progress Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="text-primary">@Model.ProgressPercentage%</h4>
                                <p class="text-muted mb-0">Progress</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-success">@(Model.Status == CyberRiskApp.Models.CapabilityStatus.Completed ? "✓" : "○")</h4>
                                <p class="text-muted mb-0">Completed</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-warning">@Model.DaysUntilTarget</h4>
                                <p class="text-muted mb-0">Days Until Target</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-danger">@(Model.IsOverdue ? "⚠" : "○")</h4>
                                <p class="text-muted mb-0">Overdue</p>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <div class="d-flex justify-content-between">
                                <span>Overall Progress</span>
                                <span>@Model.ProgressPercentage.ToString("F0")%</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar" role="progressbar" style="width: @Model.ProgressPercentage%">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <div>
                                    <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="fas fa-trash me-2"></i>Delete Capability
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this capability requirement?</p>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This will permanently delete this capability requirement.
                    </div>
                    <p class="mb-0"><strong>This action cannot be undone.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete Capability
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-set completion date when status changes to Completed
            const statusSelect = document.querySelector('select[name="Status"]');
            const completionDateInput = document.querySelector('input[name="CompletionDate"]');
            
            if (statusSelect && completionDateInput) {
                statusSelect.addEventListener('change', function() {
                    if (this.value === '@((int)CyberRiskApp.Models.CapabilityStatus.Completed)') {
                        if (!completionDateInput.value) {
                            completionDateInput.value = new Date().toISOString().split('T')[0];
                        }
                    }
                });
            }
            
            // Auto-update progress when status changes
            const progressInput = document.querySelector('input[name="ProgressPercentage"]');
            
            if (statusSelect && progressInput) {
                statusSelect.addEventListener('change', function() {
                    switch (this.value) {
                        case '@((int)CyberRiskApp.Models.CapabilityStatus.Planned)':
                            progressInput.value = 0;
                            break;
                        case '@((int)CyberRiskApp.Models.CapabilityStatus.InProgress)':
                            if (progressInput.value === '0') {
                                progressInput.value = 25;
                            }
                            break;
                        case '@((int)CyberRiskApp.Models.CapabilityStatus.Completed)':
                            progressInput.value = 100;
                            break;
                    }
                });
            }
        });
    </script>
}