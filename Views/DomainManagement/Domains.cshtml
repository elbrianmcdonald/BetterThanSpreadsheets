@model IEnumerable<CyberRiskApp.Models.ApplicationDomain>
@{
    ViewData["Title"] = "Manage Domains";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-globe text-primary me-2"></i>
            Manage Application Domains
        </h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Add New Domain
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Application Domains
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Domain Name</th>
                                <th>Type</th>
                                <th>Ports</th>
                                <th>Security</th>
                                <th>Status</th>
                                <th>Aliases</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var domain in Model)
                            {
                                <tr class="@(domain.IsPrimary ? "table-primary" : "")">
                                    <td>
                                        <strong>@domain.DomainName</strong>
                                        @if (domain.IsPrimary)
                                        {
                                            <span class="badge bg-primary ms-2">PRIMARY</span>
                                        }
                                        @if (!string.IsNullOrEmpty(domain.Description))
                                        {
                                            <br><small class="text-muted">@domain.Description</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(domain.IsPrimary ? "bg-primary" : "bg-secondary")">
                                            @(domain.IsPrimary ? "Primary" : "Secondary")
                                        </span>
                                    </td>
                                    <td>
                                        <small>
                                            HTTP: @domain.HttpPort<br>
                                            HTTPS: @domain.HttpsPort
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge 
                                            @(domain.SecurityStatus == "High Security" ? "bg-success" : 
                                              domain.SecurityStatus == "HTTPS Only" ? "bg-warning" : "bg-secondary")">
                                            @domain.SecurityStatus
                                        </span>
                                        @if (domain.ForceHttps)
                                        {
                                            <br><small class="text-success">Force HTTPS</small>
                                        }
                                        @if (domain.EnableHSTS)
                                        {
                                            <br><small class="text-info">HSTS Enabled</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(domain.IsActive ? "bg-success" : "bg-danger")">
                                            @(domain.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        @if (domain.Aliases.Any())
                                        {
                                            <span class="badge bg-info">@domain.Aliases.Count() aliases</span>
                                            <br>
                                            @foreach (var alias in domain.Aliases.Take(2))
                                            {
                                                <small class="text-muted d-block">@alias.AliasName</small>
                                            }
                                            @if (domain.Aliases.Count() > 2)
                                            {
                                                <small class="text-muted">... and @(domain.Aliases.Count() - 2) more</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No aliases</span>
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            @domain.CreatedAt.ToString("MMM dd, yyyy")
                                            <br>by @domain.CreatedBy
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-action="Details" asp-route-id="@domain.Id">
                                                    <i class="fas fa-eye me-1"></i>View Details
                                                </a></li>
                                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@domain.Id">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </a></li>
                                                <li><a class="dropdown-item" asp-action="Aliases" asp-route-domainId="@domain.Id">
                                                    <i class="fas fa-link me-1"></i>Manage Aliases
                                                </a></li>
                                                @if (!domain.IsPrimary)
                                                {
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <form asp-action="SetPrimary" asp-route-id="@domain.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="dropdown-item text-warning" 
                                                                    onclick="return confirm('Set this as the primary domain?')">
                                                                <i class="fas fa-star me-1"></i>Set as Primary
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form asp-action="Delete" asp-route-id="@domain.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="dropdown-item text-danger" 
                                                                onclick="return confirm('Are you sure you want to delete this domain?')">
                                                            <i class="fas fa-trash me-1"></i>Delete
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-globe fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No domains configured</h4>
                    <p class="text-muted">Start by adding your first application domain.</p>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Add First Domain
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-primary {
        background-color: rgba(13, 110, 253, 0.1) !important;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .dropdown-menu {
        min-width: 160px;
    }
</style>