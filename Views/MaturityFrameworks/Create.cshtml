@model CyberRiskApp.Models.MaturityFramework
@{
    ViewData["Title"] = "Create Maturity Framework";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-plus me-2"></i>Create Maturity Framework</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Framework Name</label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., NIST CSF 2.0" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Version" class="form-label">Version</label>
                                <input asp-for="Version" class="form-control" placeholder="e.g., 2.0" />
                                <span asp-validation-for="Version" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Type" class="form-label">Framework Type</label>
                                <select asp-for="Type" class="form-select">
                                    <option value="">Select Framework Type</option>
                                    <option value="@CyberRiskApp.Models.FrameworkType.NISTCSF">NIST CSF 2.0</option>
                                    <option value="@CyberRiskApp.Models.FrameworkType.C2M2">C2M2</option>
                                    <option value="@CyberRiskApp.Models.FrameworkType.Custom">Custom</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="@CyberRiskApp.Models.FrameworkStatus.Draft">Draft</option>
                                    <option value="@CyberRiskApp.Models.FrameworkStatus.Active">Active</option>
                                    <option value="@CyberRiskApp.Models.FrameworkStatus.Archived">Archived</option>
                                    <option value="@CyberRiskApp.Models.FrameworkStatus.Deprecated">Deprecated</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the framework"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Framework Information Card -->
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-1"></i>Framework Information</h6>
                        <p class="mb-2">This will create an empty framework structure. To add controls:</p>
                        <ul class="mb-0">
                            <li><strong>Upload Excel File:</strong> Use the "Upload Framework" option to import controls from Excel</li>
                            <li><strong>Manual Entry:</strong> Add controls individually after creating the framework</li>
                        </ul>
                    </div>

                    <!-- Framework Type Information -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <h6 class="text-primary"><i class="fas fa-shield-alt me-1"></i>NIST CSF 2.0</h6>
                                    <p class="small mb-0">Functions → Categories → Subcategories</p>
                                    <p class="small mb-0">Maturity: 0-4 levels</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <h6 class="text-warning"><i class="fas fa-chart-bar me-1"></i>C2M2</h6>
                                    <p class="small mb-0">Domains → MIL → Practices</p>
                                    <p class="small mb-0">Maturity: 1-3 levels</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-secondary">
                                <div class="card-body text-center">
                                    <h6 class="text-secondary"><i class="fas fa-cog me-1"></i>Custom</h6>
                                    <p class="small mb-0">Flexible structure</p>
                                    <p class="small mb-0">Custom maturity levels</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Frameworks
                        </a>
                        <div>
                            <a asp-action="Upload" class="btn btn-outline-primary me-2">
                                <i class="fas fa-upload me-1"></i>Upload from Excel Instead
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Create Framework
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}