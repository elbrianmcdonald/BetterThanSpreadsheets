@model List<CyberRiskApp.ViewModels.AssetFindingMetric>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Asset</th>
                    <th class="text-center">Open Findings</th>
                    <th class="text-center">Critical/High</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asset in Model)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@asset.Asset</div>
                            @if (asset.FindingTitles.Any())
                            {
                                <small class="text-muted" title="@string.Join(", ", asset.FindingTitles.Take(3))">
                                    @(asset.FindingTitles.Count > 3 ? $"{string.Join(", ", asset.FindingTitles.Take(3))}..." : string.Join(", ", asset.FindingTitles))
                                </small>
                            }
                        </td>
                        <td class="text-center">
                            <span class="badge bg-primary">@asset.OpenFindingCount</span>
                        </td>
                        <td class="text-center">
                            @if (asset.CriticalFindings > 0)
                            {
                                <span class="badge bg-danger me-1">@asset.CriticalFindings C</span>
                            }
                            @if (asset.HighFindings > 0)
                            {
                                <span class="badge bg-warning">@asset.HighFindings H</span>
                            }
                            @if (asset.CriticalFindings == 0 && asset.HighFindings == 0)
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-3">
        <i class="fas fa-exclamation-triangle fa-2x text-muted mb-2"></i>
        <p class="text-muted mb-0">No assets with open findings</p>
    </div>
}