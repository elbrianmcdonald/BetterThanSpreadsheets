@model List<CyberRiskApp.ViewModels.BusinessUnitFindingMetric>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Business Unit / Owner</th>
                    <th class="text-center">Overdue Findings</th>
                    <th class="text-center">Days Overdue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@unit.BusinessUnit</div>
                            <small class="text-muted">Owner: @unit.BusinessOwner</small>
                            @if (unit.Assets.Any())
                            {
                                <br>

                                <small class="text-muted">Assets: @string.Join(", ", unit.Assets.Take(2))@(unit.Assets.Count > 2 ? "..." : "")</small>
                            }
                        </td>
                        <td class="text-center">
                            <span class="badge bg-danger">@unit.OverdueFindingCount</span>
                        </td>
                        <td class="text-center">
                            <span class="badge @(unit.DaysOverdue <= 7 ? "bg-warning" :
                                                 unit.DaysOverdue <= 30 ? "bg-danger" : "bg-dark")">
                                @unit.DaysOverdue
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-3">
        <i class="fas fa-calendar-check fa-2x text-success mb-2"></i>
        <p class="text-muted mb-0">No overdue findings! Great job!</p>
    </div>
}