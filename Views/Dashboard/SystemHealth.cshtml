@{
    ViewData["Title"] = "System Health";
    var systemHealth = ViewBag.SystemHealth;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="fas fa-heartbeat text-success me-2"></i>
            System Health
        </h2>
        <div class="text-muted small">
            Last updated: @DateTime.Now.ToString("MM/dd/yyyy HH:mm:ss")
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @ViewBag.Error
        </div>
    }
    else if (systemHealth != null)
    {
        <!-- System Overview Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-2x mb-2"></i>
                        <h3>@systemHealth.TotalUsers</h3>
                        <p class="mb-0">Total Users</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                        <h3>@systemHealth.TotalFindings</h3>
                        <p class="mb-0">Total Findings</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-bullseye fa-2x mb-2"></i>
                        <h3>@systemHealth.TotalRisks</h3>
                        <p class="mb-0">Total Risks</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-clipboard-list fa-2x mb-2"></i>
                        <h3>@systemHealth.PendingRequests</h3>
                        <p class="mb-0">Pending Requests</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Status Information -->
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-server me-2"></i>System Status
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Database:</div>
                            <div class="col-8">
                                <span class="badge bg-success">@systemHealth.DatabaseStatus</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Environment:</div>
                            <div class="col-8">
                                <span class="badge bg-info">@systemHealth.Environment</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Version:</div>
                            <div class="col-8">
                                <span class="badge bg-secondary">@systemHealth.SystemVersion</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4 fw-bold">Last Refresh:</div>
                            <div class="col-8">
                                <small class="text-muted">@systemHealth.LastDataRefresh</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-controller="UserManagement" asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-users me-2"></i>Manage Users
                            </a>
                            <a asp-controller="Dashboard" asp-action="GetDashboardData" class="btn btn-outline-info" target="_blank">
                                <i class="fas fa-database me-2"></i>View Raw Data
                            </a>
                            <a asp-controller="Findings" asp-action="Index" class="btn btn-outline-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>View All Findings
                            </a>
                            <a asp-controller="Risks" asp-action="Index" class="btn btn-outline-danger">
                                <i class="fas fa-bullseye me-2"></i>View Risk Register
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Health Check Results -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-check-circle me-2 text-success"></i>System Health Checks
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Component</th>
                                        <th>Status</th>
                                        <th>Last Check</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><i class="fas fa-database me-2"></i>Database Connection</td>
                                        <td><span class="badge bg-success">Healthy</span></td>
                                        <td>@DateTime.Now.ToString("HH:mm:ss")</td>
                                        <td>PostgreSQL connection active</td>
                                    </tr>
                                    <tr>
                                        <td><i class="fas fa-users me-2"></i>User Authentication</td>
                                        <td><span class="badge bg-success">Healthy</span></td>
                                        <td>@DateTime.Now.ToString("HH:mm:ss")</td>
                                        <td>Identity system operational</td>
                                    </tr>
                                    <tr>
                                        <td><i class="fas fa-shield-alt me-2"></i>Security Services</td>
                                        <td><span class="badge bg-success">Healthy</span></td>
                                        <td>@DateTime.Now.ToString("HH:mm:ss")</td>
                                        <td>Authorization policies active</td>
                                    </tr>
                                    <tr>
                                        <td><i class="fas fa-cogs me-2"></i>Background Services</td>
                                        <td><span class="badge bg-success">Healthy</span></td>
                                        <td>@DateTime.Now.ToString("HH:mm:ss")</td>
                                        <td>All services running</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .badge {
        font-size: 0.9em;
    }
</style>