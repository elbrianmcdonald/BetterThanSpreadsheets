@model CyberRiskApp.Models.BusinessOrganization
@{
    ViewData["Title"] = "Organization Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building me-2"></i>@Model.Name</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-edit me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle me-1"></i>Organization Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Code:</dt>
                            <dd class="col-sm-8"><code>@Model.Code</code></dd>

                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.Type switch
                                {
                                    CyberRiskApp.Models.OrganizationType.IT => "primary",
                                    CyberRiskApp.Models.OrganizationType.OT => "warning",
                                    CyberRiskApp.Models.OrganizationType.Finance => "success",
                                    CyberRiskApp.Models.OrganizationType.HR => "info",
                                    CyberRiskApp.Models.OrganizationType.Legal => "secondary",
                                    CyberRiskApp.Models.OrganizationType.Operations => "dark",
                                    _ => "light"
                                })">
                                    @Model.Type
                                </span>
                            </dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Compliance Owner:</dt>
                            <dd class="col-sm-7">@Model.ComplianceOwner</dd>

                            <dt class="col-sm-5">Created:</dt>
                            <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>

                            <dt class="col-sm-5">Assessments:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-primary">@Model.Assessments.Count</span>
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <dt>Description:</dt>
                            <dd>@Model.Description</dd>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Stakeholders))
                {
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <dt>Key Stakeholders:</dt>
                            <dd>@Model.Stakeholders</dd>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h6><i class="fas fa-tools me-1"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="ComplianceAssessments" asp-action="Create" asp-route-organizationId="@Model.Id" class="btn btn-success">
                        <i class="fas fa-clipboard-check me-1"></i>Create Assessment
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-edit me-1"></i>Edit Organization
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-chart-bar me-1"></i>Statistics</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <h4 class="text-primary">@Model.Assessments.Count</h4>
                    <small class="text-muted">Total Assessments</small>
                </div>
            </div>
        </div>
    </div>
</div>