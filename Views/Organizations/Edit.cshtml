@model CyberRiskApp.Models.BusinessOrganization
@{
    ViewData["Title"] = "Edit Organization";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-edit me-2"></i>Edit Organization: @Model.Name</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CreatedAt" type="hidden" />

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Organization Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Code" class="form-label">Organization Code</label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label">Organization Type</label>
                        <select asp-for="Type" class="form-select">
                            <option value="@CyberRiskApp.Models.OrganizationType.IT">Information Technology</option>
                            <option value="@CyberRiskApp.Models.OrganizationType.OT">Operational Technology</option>
                            <option value="@CyberRiskApp.Models.OrganizationType.Finance">Finance</option>
                            <option value="@CyberRiskApp.Models.OrganizationType.HR">Human Resources</option>
                            <option value="@CyberRiskApp.Models.OrganizationType.Legal">Legal</option>
                            <option value="@CyberRiskApp.Models.OrganizationType.Operations">Operations</option>
                            <option value="@CyberRiskApp.Models.OrganizationType.Other">Other</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ComplianceOwner" class="form-label">Compliance Owner</label>
                        <input asp-for="ComplianceOwner" class="form-control" />
                        <span asp-validation-for="ComplianceOwner" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Stakeholders" class="form-label">Key Stakeholders</label>
                        <textarea asp-for="Stakeholders" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Stakeholders" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">
                            Active Organization
                        </label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Details
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}