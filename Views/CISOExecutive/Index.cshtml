@section Scripts {
    <script>
        // CISO Executive Dashboard JavaScript
        // FIXED: Added comprehensive null checks to prevent null reference exceptions

        let currentAssessmentId = 0;
        let riskDistributionChart = null;
        let trendChart = null;

        // Dashboard initialization
        document.addEventListener('DOMContentLoaded', function () {
            console.log('🚀 CISO Dashboard initializing...');
            loadDashboardData();

            // Set up refresh button - with null check
            const refreshButton = document.getElementById('refreshButton');
            if (refreshButton) {
                refreshButton.addEventListener('click', function () {
                    console.log('🔄 Manual refresh triggered');
                    loadDashboardData();
                });
            }

            // Load available assessments
            loadAvailableAssessments();
        });

        // Load available assessments for the dropdown - WITH DEBUGGING AND NULL CHECKS
        function loadAvailableAssessments() {
            console.log('🔄 Loading available assessments...');

            fetch('/CISOExecutive/GetAvailableAssessments')
                .then(response => {
                    console.log('📡 Response status:', response.status);
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('✅ Raw API response:', data);
                    console.log('📊 Type of response:', typeof data);
                    console.log('📊 Is array?', Array.isArray(data));

                    const dropdown = document.getElementById('assessmentDropdown');
                    if (!dropdown) {
                        console.error('❌ Assessment dropdown not found');
                        return;
                    }

                    // Clear existing options except the first one
                    while (dropdown.children.length > 1) {
                        dropdown.removeChild(dropdown.lastChild);
                    }

                    // Handle the response - check if it's an array or has an error
                    if (data && data.error) {
                        console.error('❌ API returned error:', data.error);
                        const infoDiv = document.getElementById('assessmentInfo');
                        if (infoDiv) {
                            infoDiv.innerHTML = '<small class="text-danger">Error loading assessments</small>';
                        }
                        return;
                    }

                    const assessments = Array.isArray(data) ? data : [];
                    console.log(`📊 Found ${assessments.length} assessments`);

                    if (assessments.length === 0) {
                        const infoDiv = document.getElementById('assessmentInfo');
                        if (infoDiv) {
                            infoDiv.innerHTML = '<small class="text-warning">No assessments available</small>';
                        }
                        return;
                    }

                    // Add assessment options
                    assessments.forEach(assessment => {
                        if (assessment && assessment.Value && assessment.Text) {
                            const option = document.createElement('option');
                            option.value = assessment.Value;
                            option.textContent = assessment.Text;
                            dropdown.appendChild(option);
                        }
                    });

                    // Add change event listener - with null check
                    if (!dropdown.hasChangeListener) {
                        dropdown.addEventListener('change', function () {
                            const selectedId = this.value;
                            console.log('🎯 Assessment selected:', selectedId);

                            if (selectedId) {
                                currentAssessmentId = parseInt(selectedId);
                                loadDashboardData();
                                const infoDiv = document.getElementById('assessmentInfo');
                                if (infoDiv) {
                                    const selectedText = this.options[this.selectedIndex].text;
                                    infoDiv.innerHTML = `<small class="text-success">Selected: ${selectedText}</small>`;
                                }
                            } else {
                                currentAssessmentId = 0;
                                loadDashboardData();
                                const infoDiv = document.getElementById('assessmentInfo');
                                if (infoDiv) {
                                    infoDiv.innerHTML = '<small class="text-muted">Select an assessment</small>';
                                }
                            }
                        });
                        dropdown.hasChangeListener = true;
                    }

                    console.log('✅ Assessment dropdown populated successfully');
                })
                .catch(error => {
                    console.error('❌ Error loading assessments:', error);
                    const infoDiv = document.getElementById('assessmentInfo');
                    if (infoDiv) {
                        infoDiv.innerHTML = '<small class="text-danger">Failed to load assessments</small>';
                    }
                });
        }

        // Load dashboard data with comprehensive error handling
        function loadDashboardData() {
            console.log('🔄 Loading dashboard data for assessment ID:', currentAssessmentId);

            const url = currentAssessmentId > 0
                ? `/CISOExecutive/GetExecutiveDashboardData?assessmentId=${currentAssessmentId}`
                : '/CISOExecutive/GetExecutiveDashboardData';

            fetch(url)
                .then(response => {
                    console.log('📡 Dashboard API response status:', response.status);
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('✅ Dashboard data received:', data);

                    if (data && data.error) {
                        console.error('❌ Dashboard API returned error:', data.error);
                        showErrorMessage('Error loading dashboard data: ' + data.error);
                        return;
                    }

                    // Update all sections with null checks
                    updateLastUpdated();
                    updateKPIs(data);
                    updateBusinessUnitsTable(data);
                    updateTopCriticalIssues(data);
