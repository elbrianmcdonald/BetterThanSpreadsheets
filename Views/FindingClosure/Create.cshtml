@model CyberRiskApp.Models.FindingClosureRequest
@{
    ViewData["Title"] = "Request Finding Closure";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-check-circle me-2"></i>Request Finding Closure
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FindingId" class="form-label fw-bold">
                                Select Finding to Close <span class="text-danger">*</span>
                            </label>
                            <select asp-for="FindingId" class="form-select" asp-items="ViewBag.FindingId">
                                <option value="">-- Select a Finding --</option>
                            </select>
                            <span asp-validation-for="FindingId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClosureJustification" class="form-label fw-bold">
                                Closure Justification <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="ClosureJustification" class="form-control" rows="5"
                                      placeholder="Explain why this finding should be closed..."></textarea>
                            <span asp-validation-for="ClosureJustification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EvidenceLinks" class="form-label fw-bold">
                                Evidence Links
                            </label>
                            <textarea asp-for="EvidenceLinks" class="form-control" rows="3"
                                      placeholder="Provide links to evidence..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdditionalNotes" class="form-label fw-bold">
                                Additional Notes
                            </label>
                            <textarea asp-for="AdditionalNotes" class="form-control" rows="2"
                                      placeholder="Any additional notes..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequestedClosureDate" class="form-label fw-bold">
                                Request Date
                            </label>
                            <input asp-for="RequestedClosureDate" type="date" class="form-control" readonly value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <small class="text-muted">Automatically set to today's date</small>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane me-2"></i>Submit Request
                            </button>
                            <a asp-controller="Findings" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Ensure the request date is always set to today
        document.addEventListener('DOMContentLoaded', function() {
            const requestDateInput = document.getElementById('RequestedClosureDate');
            if (requestDateInput) {
                const today = new Date();
                const formattedDate = today.toISOString().split('T')[0];
                requestDateInput.value = formattedDate;
            }
        });
    </script>
}