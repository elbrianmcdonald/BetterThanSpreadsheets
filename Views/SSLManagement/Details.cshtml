@model CyberRiskApp.Models.SSLCertificate
@{
    ViewData["Title"] = "Certificate Details";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-certificate me-2"></i>Certificate Details</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to SSL Management
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>
                    <i class="fas fa-info-circle me-2"></i>@Model.Name
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success ms-2">Active</span>
                    }
                    @if (Model.IsExpired)
                    {
                        <span class="badge bg-danger ms-2">Expired</span>
                    }
                    else if (Model.DaysUntilExpiry <= 30)
                    {
                        <span class="badge bg-warning ms-2">Expires Soon</span>
                    }
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Certificate Information</h6>
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Subject:</strong></td>
                                <td><small>@Model.Subject</small></td>
                            </tr>
                            <tr>
                                <td><strong>Issuer:</strong></td>
                                <td><small>@Model.Issuer</small></td>
                            </tr>
                            <tr>
                                <td><strong>Thumbprint:</strong></td>
                                <td><code>@Model.Thumbprint</code></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>Validity Information</h6>
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Valid From:</strong></td>
                                <td>@Model.ValidFrom.ToString("yyyy-MM-dd HH:mm:ss") UTC</td>
                            </tr>
                            <tr>
                                <td><strong>Valid To:</strong></td>
                                <td>@Model.ValidTo.ToString("yyyy-MM-dd HH:mm:ss") UTC</td>
                            </tr>
                            <tr>
                                <td><strong>Status:</strong></td>
                                <td>
                                    @if (Model.IsExpired)
                                    {
                                        <span class="badge bg-danger">Expired</span>
                                    }
                                    else if (Model.DaysUntilExpiry <= 30)
                                    {
                                        <span class="badge bg-warning">Expires in @Model.DaysUntilExpiry days</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Valid (@Model.DaysUntilExpiry days remaining)</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Has Private Key:</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.PrivateKeyData))
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">No</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-history me-2"></i>Management History</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Created At:</strong></td>
                                <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss") UTC</td>
                            </tr>
                            <tr>
                                <td><strong>Created By:</strong></td>
                                <td>@Model.CreatedBy</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Updated At:</strong></td>
                                <td>@(Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never") @(Model.UpdatedAt.HasValue ? "UTC" : "")</td>
                            </tr>
                            <tr>
                                <td><strong>Updated By:</strong></td>
                                <td>@(Model.UpdatedBy ?? "N/A")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-tools me-2"></i>Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (!Model.IsActive && Model.IsValid)
                    {
                        <form asp-action="SetActive" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-check me-1"></i>Set as Active Certificate
                            </button>
                        </form>
                    }
                    
                    <form asp-action="Install" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-download me-1"></i>Install to System Store
                        </button>
                    </form>
                    
                    <form asp-action="Remove" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="fas fa-times me-1"></i>Remove from System Store
                        </button>
                    </form>
                    
                    <a asp-action="Export" asp-route-id="@Model.Id" class="btn btn-secondary w-100">
                        <i class="fas fa-file-export me-1"></i>Export Certificate
                    </a>
                    
                    <a asp-action="Export" asp-route-id="@Model.Id" asp-route-includePrivateKey="true" 
                       class="btn btn-outline-secondary w-100">
                        <i class="fas fa-key me-1"></i>Export with Private Key
                    </a>
                    
                    @if (!Model.IsActive)
                    {
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('Are you sure you want to delete this certificate? This action cannot be undone.')">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-trash me-1"></i>Delete Certificate
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        @if (Model.DaysUntilExpiry <= 30 && !Model.IsExpired)
        {
            <div class="card mt-3 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Expiration Warning</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        This certificate will expire in <strong>@Model.DaysUntilExpiry days</strong>. 
                        Consider renewing or replacing it soon to avoid service disruption.
                    </p>
                </div>
            </div>
        }
        
        @if (Model.IsExpired)
        {
            <div class="card mt-3 border-danger">
                <div class="card-header bg-danger text-white">
                    <h6><i class="fas fa-times-circle me-2"></i>Certificate Expired</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        This certificate expired on <strong>@Model.ValidTo.ToString("yyyy-MM-dd")</strong>. 
                        It should not be used for production services.
                    </p>
                </div>
            </div>
        }

        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-info-circle me-2"></i>Certificate Usage</h6>
            </div>
            <div class="card-body">
                <small>
                    <ul class="mb-0">
                        <li><strong>Install to System:</strong> Adds certificate to machine certificate store</li>
                        <li><strong>Set as Active:</strong> Makes this certificate the default for HTTPS</li>
                        <li><strong>Export:</strong> Download certificate for backup or use elsewhere</li>
                        <li><strong>Remove from System:</strong> Removes from machine certificate store</li>
                    </ul>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show confirmation for potentially dangerous actions
            $('form button').click(function(e) {
                var action = $(this).text().toLowerCase();
                if (action.includes('remove') || action.includes('delete')) {
                    var confirmMsg = 'Are you sure you want to ' + action + '? This action may affect SSL connectivity.';
                    if (!confirm(confirmMsg)) {
                        e.preventDefault();
                        return false;
                    }
                }
            });
        });
    </script>
}