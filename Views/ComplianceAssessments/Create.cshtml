@model CyberRiskApp.ViewModels.ComplianceAssessmentViewModel
@{
    ViewData["Title"] = "Create Assessment";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-plus me-2"></i>Create New Compliance Assessment</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Assessment.Title" class="form-label">Assessment Title</label>
                                <input asp-for="Assessment.Title" class="form-control" placeholder="e.g., Q1 2024 ISO 27001 Assessment" />
                                <span asp-validation-for="Assessment.Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Assessment.Status" class="form-label">Initial Status</label>
                                <select asp-for="Assessment.Status" class="form-select">
                                    <option value="@AssessmentStatus.Draft">Draft</option>
                                    <option value="@AssessmentStatus.InProgress">In Progress</option>
                                </select>
                                <span asp-validation-for="Assessment.Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Assessment.ComplianceFrameworkId" class="form-label">Framework</label>
                                <select asp-for="Assessment.ComplianceFrameworkId" class="form-select">
                                    <option value="">Select Framework</option>
                                    @foreach (var framework in Model.Frameworks)
                                    {
                                        <option value="@framework.Id">@framework.Name (v@framework.Version)</option>
                                    }
                                </select>
                                <span asp-validation-for="Assessment.ComplianceFrameworkId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Assessment.BusinessOrganizationId" class="form-label">Organization</label>
                                <select asp-for="Assessment.BusinessOrganizationId" class="form-select">
                                    <option value="">Select Organization</option>
                                    @foreach (var org in Model.Organizations)
                                    {
                                        <option value="@org.Id">@org.Name (@org.Code)</option>
                                    }
                                </select>
                                <span asp-validation-for="Assessment.BusinessOrganizationId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Assessment.Description" class="form-label">Description</label>
                        <textarea asp-for="Assessment.Description" class="form-control" rows="3"
                                  placeholder="Describe the scope and objectives of this assessment..."></textarea>
                        <span asp-validation-for="Assessment.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Assessment.StartDate" class="form-label">Start Date</label>
                                <input asp-for="Assessment.StartDate" type="date" class="form-control" />
                                <span asp-validation-for="Assessment.StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Assessment.DueDate" class="form-label">Due Date</label>
                                <input asp-for="Assessment.DueDate" type="date" class="form-control" />
                                <span asp-validation-for="Assessment.DueDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Assessment.Assessor" class="form-label">Assessor</label>
                                <input asp-for="Assessment.Assessor" class="form-control" placeholder="Assessment lead" />
                                <span asp-validation-for="Assessment.Assessor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-1"></i>What happens next?</h6>
                        <ul class="mb-0">
                            <li>After creating the assessment, control-level assessments will be automatically generated</li>
                            <li>You can then work through each control to document compliance status</li>
                            <li>Progress will be tracked automatically as you complete control assessments</li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Assessments
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Create Assessment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}