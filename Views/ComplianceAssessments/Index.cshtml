@model IEnumerable<CyberRiskApp.Models.ComplianceAssessment>
@{
    ViewData["Title"] = "Compliance Assessments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-clipboard-check me-2"></i>Compliance Assessments</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>New Assessment
    </a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Framework</th>
                            <th>Organization</th>
                            <th>Status</th>
                            <th>Progress</th>
                            <th>Assessor</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var assessment in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@assessment.Title</strong>
                                    @if (!string.IsNullOrEmpty(assessment.Description))
                                    {
                                        <br>

                                        <small class="text-muted">@assessment.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@assessment.Framework.Name</span>
                                    <br><small class="text-muted">v@assessment.Framework.Version</small>
                                </td>
                                <td>@assessment.Organization.Name</td>
                                <td>
                                    <span class="badge bg-@(assessment.Status switch
                                    {
                                        CyberRiskApp.Models.AssessmentStatus.Draft => "secondary",
                                        CyberRiskApp.Models.AssessmentStatus.InProgress => "warning",
                                        CyberRiskApp.Models.AssessmentStatus.Completed => "success",
                                        CyberRiskApp.Models.AssessmentStatus.Approved => "primary",
                                        _ => "secondary"
                                    })">
                                        @assessment.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-@(assessment.CompliancePercentage >= 80 ? "success" : assessment.CompliancePercentage >= 60 ? "warning" : "danger")"
                                             role="progressbar"
                                             style="width: @assessment.CompliancePercentage%"
                                             aria-valuenow="@assessment.CompliancePercentage"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @assessment.CompliancePercentage.ToString("F0")%
                                        </div>
                                    </div>
                                </td>
                                <td>@assessment.Assessor</td>
                                <td>
                                    @if (assessment.DueDate.HasValue)
                                    {
                                        <span class="@(assessment.DueDate < DateTime.UtcNow && assessment.Status != AssessmentStatus.Completed ? "text-danger" : "")">
                                            @assessment.DueDate.Value.ToString("MMM dd, yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No due date</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@assessment.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@assessment.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(assessment.Id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal@(assessment.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete the assessment "<strong>@assessment.Title</strong>"?
                                                    This will also delete all control assessments.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-route-id="@assessment.Id" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="fas fa-trash me-1"></i>Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center">
            <i class="fas fa-clipboard-check fa-3x text-muted mb-3"></i>
            <h4>No Assessments Found</h4>
            <p class="text-muted">Get started by creating your first compliance assessment.</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Create Assessment
            </a>
        </div>
    </div>
}