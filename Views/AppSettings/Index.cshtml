@model CyberRiskApp.Models.AppSettings
@{
    ViewData["Title"] = "Application Domain Settings";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-globe text-primary me-2"></i>
                        Application Domain Configuration
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Index" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.CreatedAt)
                        @Html.HiddenFor(m => m.CreatedBy)

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-4">
                                    <label asp-for="DomainName" class="form-label h5"></label>
                                    <input asp-for="DomainName" class="form-control form-control-lg" 
                                           placeholder="example.com" />
                                    <div class="form-text">
                                        Enter the domain name that this application will respond to.
                                    </div>
                                    <span asp-validation-for="DomainName" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-save me-2"></i>Save Domain Configuration
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-info-circle text-info me-1"></i>
                                            Domain Configuration Help
                                        </h6>
                                        <p class="card-text small">
                                            <strong>What is this?</strong><br>
                                            This setting tells the application what domain name it should respond to for web requests.
                                        </p>
                                        <p class="card-text small">
                                            <strong>Examples:</strong><br>
                                            • <code>mycompany.com</code><br>
                                            • <code>grc.mycompany.com</code><br>
                                            • <code>risk.internal.local</code>
                                        </p>
                                    </div>
                                </div>

                                @if (Model != null && !string.IsNullOrEmpty(Model.DomainName))
                                {
                                    <div class="card mt-3">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="fas fa-link text-success me-1"></i>
                                                Current Configuration
                                            </h6>
                                            <p class="card-text">
                                                <strong>Domain:</strong> @Model.DomainName<br>
                                                <strong>URL:</strong> <a href="http://@Model.DomainName" target="_blank">http://@Model.DomainName</a>
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}