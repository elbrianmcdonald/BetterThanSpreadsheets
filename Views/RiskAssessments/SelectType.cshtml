@{
    ViewData["Title"] = "Select Assessment Type";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-shield-alt text-primary me-2"></i>
                    Create Risk Assessment
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>

            <div class="card">
                <div class="card-header bg-primary bg-opacity-10">
                    <h5 class="mb-0">
                        <i class="fas fa-route me-2"></i>Choose Assessment Type
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Create a new qualitative risk assessment using our Risk Matrix methodology.
                    </p>

                    <div class="row justify-content-center">
                        <!-- Qualitative Assessment Option -->
                        <div class="col-md-8 mb-4">
                            <div class="card h-100 border-warning assessment-type-card" style="cursor: pointer;" onclick="window.location.href='@Url.Action("CreateQualitative")'">
                                <div class="card-header bg-warning bg-opacity-10 text-center">
                                    <i class="fas fa-balance-scale fa-3x text-warning mb-3"></i>
                                    <h4 class="text-warning">Qualitative Assessment</h4>
                                    <span class="badge bg-warning text-dark">Qualitative</span>
                                </div>
                                <div class="card-body">
                                    <h6 class="text-warning mb-3">Risk Matrix Methodology</h6>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Likelihood × Impact × Exposure matrix
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Simplified risk categorization
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Faster assessment process
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Control documentation and analysis
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Expert judgment based scoring
                                        </li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-warning bg-opacity-10 text-center">
                                    <strong class="text-warning">Best for: Quick assessments, initial risk evaluation</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>About Qualitative Assessment</strong>
                        <p class="mb-0 mt-2">
                            This assessment uses a Risk Matrix methodology with Likelihood × Impact × Exposure scoring. 
                            It's ideal for quick risk evaluations, initial risk screening, and situations where quantitative data may be limited.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.assessment-type-card:hover {
    transform: translateY(-5px);
    transition: transform 0.2s ease-in-out;
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}

.assessment-type-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}
</style>