@{
    ViewData["Title"] = "Select Assessment Type";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-shield-alt text-primary me-2"></i>
                    Create Risk Assessment
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>

            <div class="card">
                <div class="card-header bg-primary bg-opacity-10">
                    <h5 class="mb-0">
                        <i class="fas fa-route me-2"></i>Choose Assessment Type
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Select the type of risk assessment you want to perform. Each type has different methodologies and requirements.
                    </p>

                    <div class="row">
                        <!-- FAIR Assessment Option -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-success assessment-type-card" style="cursor: pointer;" onclick="window.location.href='@Url.Action("CreateFAIR")'">
                                <div class="card-header bg-success bg-opacity-10 text-center">
                                    <i class="fas fa-calculator fa-3x text-success mb-3"></i>
                                    <h4 class="text-success">FAIR Assessment</h4>
                                    <span class="badge bg-success">Quantitative</span>
                                </div>
                                <div class="card-body">
                                    <h6 class="text-success mb-3">Factor Analysis of Information Risk</h6>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            Quantitative risk analysis with Monte Carlo simulation
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            Calculates Annual Loss Expectancy (ALE)
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            Threat Event Frequency modeling
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            Defense in Depth control effectiveness
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            Primary and Secondary loss estimation
                                        </li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-success bg-opacity-10 text-center">
                                    <strong class="text-success">Best for: Financial impact analysis, regulatory compliance</strong>
                                </div>
                            </div>
                        </div>

                        <!-- Qualitative Assessment Option -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-warning assessment-type-card" style="cursor: pointer;" onclick="window.location.href='@Url.Action("CreateQualitative")'">
                                <div class="card-header bg-warning bg-opacity-10 text-center">
                                    <i class="fas fa-balance-scale fa-3x text-warning mb-3"></i>
                                    <h4 class="text-warning">Qualitative Assessment</h4>
                                    <span class="badge bg-warning text-dark">Qualitative</span>
                                </div>
                                <div class="card-body">
                                    <h6 class="text-warning mb-3">Risk Matrix Methodology</h6>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Likelihood × Impact × Exposure matrix
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Simplified risk categorization
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Faster assessment process
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Control documentation and analysis
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-warning me-2"></i>
                                            Expert judgment based scoring
                                        </li>
                                    </ul>
                                </div>
                                <div class="card-footer bg-warning bg-opacity-10 text-center">
                                    <strong class="text-warning">Best for: Quick assessments, initial risk evaluation</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Need help choosing?</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>Choose FAIR</strong> when you need detailed financial impact analysis, have sufficient data for quantitative analysis, or need precise ALE calculations for business decisions.</li>
                            <li><strong>Choose Qualitative</strong> when you need a quick risk assessment, have limited quantitative data, or are performing initial risk screening.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.assessment-type-card:hover {
    transform: translateY(-5px);
    transition: transform 0.2s ease-in-out;
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}

.assessment-type-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}
</style>