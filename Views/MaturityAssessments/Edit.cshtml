@model CyberRiskApp.ViewModels.MaturityAssessmentViewModel
@{
    ViewData["Title"] = "Edit Maturity Assessment";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-edit me-2"></i>Edit Maturity Assessment</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Assessment.Id" />
                    <input type="hidden" asp-for="Assessment.Assessor" />
                    <input type="hidden" asp-for="Assessment.StartDate" />
                    <input type="hidden" asp-for="Assessment.CreatedAt" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Assessment.Title" class="form-label">Assessment Title</label>
                                <input asp-for="Assessment.Title" class="form-control" />
                                <span asp-validation-for="Assessment.Title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Assessment.MaturityFrameworkId" class="form-label">Maturity Framework</label>
                                <select asp-for="Assessment.MaturityFrameworkId" class="form-select">
                                    <option value="">Select Framework</option>
                                    @foreach (var framework in Model.AvailableFrameworks)
                                    {
                                        <option value="@framework.Id" selected="@(Model.Assessment.MaturityFrameworkId == framework.Id ? "selected" : "")">
                                            @framework.Name
                                            @if (!string.IsNullOrEmpty(framework.Version))
                                            {
                                                <text>v@framework.Version</text>
                                            }
                                            @if (framework.Type == CyberRiskApp.Models.FrameworkType.NISTCSF)
                                            {
                                                <text>(NIST CSF 2.0)</text>
                                            }
                                            else if (framework.Type == CyberRiskApp.Models.FrameworkType.C2M2)
                                            {
                                                <text>(C2M2)</text>
                                            }
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="Assessment.MaturityFrameworkId" class="text-danger"></span>
                                @if (Model.Assessment.Status != CyberRiskApp.Models.AssessmentStatus.Draft)
                                {
                                    <div class="form-text text-warning">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        Changing the framework will reset all control assessments.
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Assessment.BusinessOrganizationId" class="form-label">Organization</label>
                                <select asp-for="Assessment.BusinessOrganizationId" class="form-select">
                                    <option value="">Select Organization</option>
                                    @foreach (var organization in Model.AvailableOrganizations)
                                    {
                                        <option value="@organization.Id" selected="@(Model.Assessment.BusinessOrganizationId == organization.Id ? "selected" : "")">
                                            @organization.Name
                                            @if (!string.IsNullOrEmpty(organization.Code))
                                            {
                                                <text>(@organization.Code)</text>
                                            }
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="Assessment.BusinessOrganizationId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Assessment.Description" class="form-label">Description</label>
                                <textarea asp-for="Assessment.Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Assessment.Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Assessment.Status" class="form-label">Status</label>
                                <select asp-for="Assessment.Status" class="form-select">
                                    <option value="@CyberRiskApp.Models.AssessmentStatus.Draft">Draft</option>
                                    <option value="@CyberRiskApp.Models.AssessmentStatus.InProgress">In Progress</option>
                                    <option value="@CyberRiskApp.Models.AssessmentStatus.Completed">Completed</option>
                                    <option value="@CyberRiskApp.Models.AssessmentStatus.Approved">Approved</option>
                                </select>
                                <span asp-validation-for="Assessment.Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Assessment.DueDate" class="form-label">Due Date (Optional)</label>
                                <input asp-for="Assessment.DueDate" type="date" class="form-control" />
                                <span asp-validation-for="Assessment.DueDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Overall Maturity Score</label>
                                <input type="text" class="form-control" value="@Model.Assessment.OverallMaturityScore.ToString("F2")" readonly />
                                <div class="form-text">Calculated automatically from control assessments</div>
                            </div>
                        </div>
                    </div>

                    <!-- Assessment Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Assessor</label>
                                <input type="text" class="form-control" value="@Model.Assessment.Assessor" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Start Date</label>
                                <input type="text" class="form-control" value="@Model.Assessment.StartDate.ToString("MMM dd, yyyy")" readonly />
                            </div>
                        </div>
                    </div>

                    @if (Model.Assessment.Status == CyberRiskApp.Models.AssessmentStatus.Completed || Model.Assessment.Status == CyberRiskApp.Models.AssessmentStatus.Approved)
                    {
                        <div class="alert alert-success">
                            <h6><i class="fas fa-check-circle me-1"></i>Assessment Status</h6>
                            <p class="mb-1"><strong>Status:</strong> @Model.Assessment.Status</p>
                            @if (Model.Assessment.CompletedDate.HasValue)
                            {
                                <p class="mb-0"><strong>Completed:</strong> @Model.Assessment.CompletedDate.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Assessments
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Assessment.Id" class="btn btn-info">
                                <i class="fas fa-eye me-1"></i>View Details
                            </a>
                        </div>
                        <div>
                            @if (Model.Assessment.Status == CyberRiskApp.Models.AssessmentStatus.Draft || Model.Assessment.Status == CyberRiskApp.Models.AssessmentStatus.InProgress)
                            {
                                <a asp-action="Perform" asp-route-id="@Model.Assessment.Id" class="btn btn-warning me-2">
                                    <i class="fas fa-tasks me-1"></i>Continue Assessment
                                </a>
                            }
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Changes
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}