@model CyberRiskApp.ViewModels.ReferenceDataManagementViewModel
@{
    ViewData["Title"] = "Reference Data Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-database me-2"></i>Reference Data Management
                    </h4>
                    <div>
                        <form asp-action="MigrateData" method="post" class="d-inline me-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-primary btn-sm" onclick="return confirm('This will extract and create reference data from existing records. Continue?')">
                                <i class="fas fa-sync-alt me-1"></i>Migrate Existing Data
                            </button>
                        </form>
                        <a asp-action="UnusedEntries" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-exclamation-triangle me-1"></i>Unused Entries (@Model.UnusedEntriesCount)
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var category in Model.Categories)
                        {
                            <div class="col-md-6 col-lg-3 mb-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            @switch (category.Name)
                                            {
                                                case "Asset":
                                                    <i class="fas fa-server fa-3x text-primary mb-3"></i>
                                                    break;
                                                case "BusinessOwner":
                                                    <i class="fas fa-user-tie fa-3x text-success mb-3"></i>
                                                    break;
                                                case "BusinessUnit":
                                                    <i class="fas fa-building fa-3x text-info mb-3"></i>
                                                    break;
                                                case "TechnicalControl":
                                                    <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                                                    break;
                                                default:
                                                    <i class="fas fa-list fa-3x text-secondary mb-3"></i>
                                                    break;
                                            }
                                        </div>
                                        <h5 class="card-title">@category.DisplayName</h5>
                                        <p class="card-text">
                                            <span class="badge bg-primary fs-6">@category.Count entries</span>
                                        </p>
                                        <div class="mt-3">
                                            <a asp-action="Category" asp-route-category="@category.Id" class="btn btn-primary btn-sm me-2">
                                                <i class="fas fa-list me-1"></i>Manage
                                            </a>
                                            <a asp-action="Create" asp-route-category="@category.Id" class="btn btn-success btn-sm">
                                                <i class="fas fa-plus me-1"></i>Add New
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (Model.Categories.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-info-circle me-2"></i>Quick Statistics
                                        </h6>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="text-center">
                                                    <div class="h4 text-primary mb-1">@Model.Categories.Sum(c => c.Count)</div>
                                                    <div class="text-muted small">Total Entries</div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="text-center">
                                                    <div class="h4 text-success mb-1">@Model.Categories.Count</div>
                                                    <div class="text-muted small">Categories</div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="text-center">
                                                    <div class="h4 text-warning mb-1">@Model.UnusedEntriesCount</div>
                                                    <div class="text-muted small">Unused Entries</div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="text-center">
                                                    <div class="h4 text-info mb-1">@Model.Categories.Where(c => c.Count > 0).Count()</div>
                                                    <div class="text-muted small">Active Categories</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>