@model CyberRiskApp.ViewModels.UnusedEntriesViewModel
@{
    ViewData["Title"] = "Unused Reference Entries";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Unused Reference Entries
                    </h4>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Back to Overview
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Entries.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            The following entries have never been used or haven't been used recently. 
                            Consider reviewing and potentially removing unused entries to keep your reference data clean.
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Category</th>
                                        <th>Value</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Usage</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model.Entries)
                                    {
                                        <tr class="@(entry.IsActive ? "" : "table-secondary")">
                                            <td>
                                                @{
                                                    var categoryDisplay = entry.Category switch
                                                    {
                                                        CyberRiskApp.Models.ReferenceDataCategory.Asset => "Assets",
                                                        CyberRiskApp.Models.ReferenceDataCategory.BusinessOwner => "Business Owners",
                                                        CyberRiskApp.Models.ReferenceDataCategory.BusinessUnit => "Business Units",
                                                        CyberRiskApp.Models.ReferenceDataCategory.TechnicalControl => "Technical Controls",
                                                        _ => entry.Category.ToString()
                                                    };
                                                    var categoryIcon = entry.Category switch
                                                    {
                                                        CyberRiskApp.Models.ReferenceDataCategory.Asset => "fa-server text-primary",
                                                        CyberRiskApp.Models.ReferenceDataCategory.BusinessOwner => "fa-user-tie text-success",
                                                        CyberRiskApp.Models.ReferenceDataCategory.BusinessUnit => "fa-building text-info",
                                                        CyberRiskApp.Models.ReferenceDataCategory.TechnicalControl => "fa-shield-alt text-warning",
                                                        _ => "fa-list text-secondary"
                                                    };
                                                }
                                                <i class="fas @categoryIcon me-2"></i>
                                                @categoryDisplay
                                            </td>
                                            <td>
                                                <strong>@entry.Value</strong>
                                                @if (!entry.IsActive)
                                                {
                                                    <span class="badge bg-secondary ms-2">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(entry.Description))
                                                {
                                                    @entry.Description
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">No description</span>
                                                }
                                            </td>
                                            <td>
                                                @if (entry.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @entry.CreatedAt.ToString("MM/dd/yyyy")<br>
                                                    by @entry.CreatedBy
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">@entry.UsageCount</span>
                                                @if (entry.LastUsedAt.HasValue)
                                                {
                                                    <br><small class="text-muted">Last: @entry.LastUsedAt.Value.ToString("MM/dd/yyyy")</small>
                                                }
                                                else
                                                {
                                                    <br><small class="text-muted">Never used</small>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Category" asp-route-category="@((int)entry.Category)" class="btn btn-outline-info" title="View Category">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@entry.Id" />
                                                        <input type="hidden" name="category" value="@((int)entry.Category)" />
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete"
                                                                onclick="return confirm('Are you sure you want to delete this unused entry?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-info-circle me-2"></i>Cleanup Recommendations
                                    </h6>
                                    <ul class="mb-0">
                                        <li><strong>Review unused entries:</strong> Check if these entries are still relevant to your organization</li>
                                        <li><strong>Consider deactivating:</strong> Instead of deleting, you can deactivate entries to hide them from forms while preserving data integrity</li>
                                        <li><strong>Safe to delete:</strong> Entries with 0 usage count that are no longer needed can be safely deleted</li>
                                        <li><strong>Regular maintenance:</strong> Review unused entries periodically to keep your reference data clean and manageable</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">Great! No unused entries found</h5>
                            <p class="text-muted">All your reference data entries are being actively used. Your reference data is well-maintained.</p>
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Overview
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>