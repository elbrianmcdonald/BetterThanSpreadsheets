@model CyberRiskApp.Models.ThirdParty
@using CyberRiskApp.Models
@{
    ViewData["Title"] = "Create Third Party";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4><i class="fas fa-plus me-2"></i>Create New Third Party</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Basic Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">Basic Information</h5>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Organization" class="form-label"></label>
                                    <input asp-for="Organization" class="form-control" />
                                    <span asp-validation-for="Organization" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the third party and services provided"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">Contact Information</h5>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RepresentativeEmail" class="form-label"></label>
                                    <input asp-for="RepresentativeEmail" type="email" class="form-control" />
                                    <span asp-validation-for="RepresentativeEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TPRAHyperlink" class="form-label"></label>
                                    <input asp-for="TPRAHyperlink" type="url" class="form-control" placeholder="https://example.com/tpra-document" />
                                    <small class="form-text text-muted">Link to TPRA document or assessment</small>
                                    <span asp-validation-for="TPRAHyperlink" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Risk Assessment -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">Risk Assessment</h5>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="TPRAStatus" class="form-label"></label>
                                    <select asp-for="TPRAStatus" class="form-select" asp-items="Html.GetEnumSelectList<TPRAStatus>()">
                                        <option value="">Select TPRA Status</option>
                                    </select>
                                    <span asp-validation-for="TPRAStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="RiskLevel" class="form-label"></label>
                                    <select asp-for="RiskLevel" class="form-select" asp-items="Html.GetEnumSelectList<RiskLevel>()">
                                        <option value="">Select Risk Level</option>
                                    </select>
                                    <span asp-validation-for="RiskLevel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="BIARating" class="form-label"></label>
                                    <select asp-for="BIARating" class="form-select" asp-items="Html.GetEnumSelectList<BIARating>()">
                                        <option value="">Select BIA Rating</option>
                                    </select>
                                    <small class="form-text text-muted">Business Impact Analysis Rating</small>
                                    <span asp-validation-for="BIARating" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Third Party Register
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Create Third Party
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}